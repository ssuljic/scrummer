<%= stylesheet_link_tag "application", media: "all" %>
<div class="container">
  <div class="row" style="margin-top:10px;">
    <%= form_tag("/api/users/change_password?token=#{params[:token]}", method: 'put', class: 'form-horizontal') do %>
      <div class="form-group">
        <label for="password" class="col-xs-1 control-label">Password</label>
        <div class="col-xs-11">
          <%= password_field_tag 'password' %>
        </div>
      </div>
      <div class="form-group">
        <label for="password_confirmation" class="col-xs-1 control-label">Confirm password</label>
        <div class="col-xs-11">
          <%= password_field_tag 'password_confirmation' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-11">
          <%= submit_tag 'Save', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>